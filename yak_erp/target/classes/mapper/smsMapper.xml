<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
	<mapper namespace = "sms">
		<insert id = "insert">
			INSERT INTO sms
			values (
				#{sms_to},
				#{sms_text},
				#{s_date}
			)
		</insert>
		<select id = "select" resultType = "com.km.yak_erp.vo.SmsVo">
			SELECT *		
			FROM sms
			WHERE sms_to = #{to}
		</select>
		<select id = "selectAll" resultType = "com.km.yak_erp.vo.SmsVo">
			SELECT *		
			FROM sms
			ORDER BY s_date DESC
		</select>
	</mapper>